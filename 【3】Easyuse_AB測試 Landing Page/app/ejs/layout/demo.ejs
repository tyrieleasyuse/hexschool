<div class="order-banner container  d-flex  flex-xl-row  flex-column  align-items-center  align-items-stretch">
    <div class="img  d-flex  flex-column  align-items-xl-start align-items-center">
        <div
            class="order-notice  btn  btn-outline-light  btn-none-hover text-light  d-flex  justify-content-center  align-items-center">
            <span>詳細了解</span>
        </div>
        <div class="order-logo"></div>
        <h2 class="text-light">A/B Test 功能</h2>
    </div>
    <div class="order-content bg-secondary-light" id="demoblock">
        <form id="form-demo" class="needs-validation" novalidate method="POST" action="">
            <div class="d-flex  flex-md-row  flex-column">
                <div class="form-group">
                    <label for="username">姓名*</label>
                    <input type="text" class="form-control  wd-100 background-color-primary" id="username"
                        name="username" placeholder="" value="" required>
                    <div class="invalid-feedback">
                        請輸入姓名
                    </div>
                </div>
                <div class="form-group">
                    <label for="companyname">公司名稱*</label>
                    <input type="text" class="form-control  wd-100 background-color-primary" id="companyname"
                        name="companyname" placeholder="" value="" required>
                    <div class="invalid-feedback">
                        請輸入公司名稱
                    </div>
                </div>
            </div>
            <div class="d-flex  flex-md-row  flex-column">
                <div class="form-group">
                    <label for="companytype">產業類別*</label>
                    <select class="form-control  wd-100" id="companytype" name="companytype" required>
                        <option class="wd-100" value=""> 請選擇 </option>
                        <option class="wd-100"> 金融業 </option>
                        <option class="wd-100"> 保險業 </option>
                        <option class="wd-100"> 零售業 </option>
                        <option class="wd-100"> 百貨業 </option>
                        <option class="wd-100"> 旅遊業 </option>
                        <option class="wd-100"> 電信業 </option>
                        <option class="wd-100"> 運輸業 </option>
                        <option class="wd-100"> 餐飲業 </option>
                        <option class="wd-100"> 電商業 </option>
                        <option class="wd-100"> 醫療業 </option>
                        <option class="wd-100"> 資訊科技 </option>
                        <option class="wd-100"> 行銷廣告 </option>
                        <option class="wd-100"> 政府機關 </option>
                        <option class="wd-100"> 非營利組織 </option>
                        <option class="wd-100"> 其他 </option>
                    </select>
                    <div class="invalid-feedback">
                        請選擇類別
                    </div>
                </div>
                <div class="form-group">
                    <label for="phone">聯絡電話*</label>
                    <input type="text" class="form-control  wd-100 background-color-primary" id="phone" name="phone"
                        placeholder="" value="" required>
                    <div class="invalid-feedback">
                        請輸入電話號碼
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label for="email">Email*</label>
                <input type="text" class="form-control  wd-200 background-color-primary" id="email" name="email"
                    placeholder="" value="" required>
                <div class="invalid-feedback">
                    請輸入電子信箱
                </div>
            </div>
            <div class="form-group">
                <label for="memo">備註</label>
                <textarea class="form-control  wd-200 background-color-primary" rows="3" id="memo"
                    name="memo"></textarea>
            </div>
            <button type="submit" class="custom-btn-demo  wd-200  btn  btn-light text-light"
                data-toggle="modal">預約&nbsp;DEMO</button>
        </form>
    </div>
</div>